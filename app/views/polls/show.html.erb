<h1><%= @poll.title %></h1>

<ul>
  <li><%= link_to "Edit", edit_poll_path(@poll) %></li>
  <li><%= link_to "Destroy", poll_path(@poll), method: :delete, data: { confirm: "Are you sure?"} %></li>
</ul>

<h1>Select your answer:</h1>
<% @poll.answers.each do |answer| %>
  <p>
    <%= answer.title %>
  </p>
<% end %>

<h5>Add a possible answer to for your question:</h5>
<%= form_with model: [ @poll, @poll.answers.build ] do |f| %>
  <p>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<li><%= link_to "Polls", root_path %></li>